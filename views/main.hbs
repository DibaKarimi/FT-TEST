<main class="head-lines">
  <div class="headlines-container">
    {{#if data.results}}
      <div>
        <ul class="head-lines-ul">
          {{#each  data.results}}
            <li>
              <section
                class="headLine"
                role="contentinfo"
                aria-label={{title.title}}
              >
                <div class="img-container">
                  {{#if images.0.url}}
                  <img alt="image of title" src="{{{images.0.url}}}" />
                  {{/if}}
                </div>
                <div>
                  <div class="byline-container">
                    <a
                      href="{{location.uri}}"
                      class="byline-link" 
                      aria-label="line link"
                    >{{editorial.byline}}</a></div>
                  <a
                    href="location.uri"
                    class="title"
                    id={{id}}
                  >{{title.title}}</a>
                  <p><a
                      href="location.uri"
                      class="summary-link"
                    >{{summary.excerpt}}</a></p>
                </div>
              </section>
            </li>
          {{/each}}
        </ul>
      </div>
      <div class="pagination">
      {{#if data.previous}}
        <a class="pagination-icon-left" name="pagination left icon"
          href="/?page={{data.previous}}&searchKey={{data.searchKey}}"  
        ></a>
      {{/if}}
      <span class="pagination-text">Page
      <strong>{{data.page}}</strong> of
      {{data.pageCount}}</span>
      {{#if data.next}}
        <a class="pagination-icon-right" aria-label="pagination right icon"
          href="/?page={{data.next}}&searchKey={{data.searchKey}}"  
        ></a>
      {{/if}}
    </div>
   

    {{else}}
      <h2> {{ message}} </h2>
    {{/if}}
     <button onclick="nextPage( {{data.next}} , '{{data}}')" class="button next"
  id="next">next</button>
  </div>
</main>